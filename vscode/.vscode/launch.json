{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "preLaunchTask": "npm: debug-build",
            "sourceMaps": true
        },
        {
            "name": "Run Extension (Watch)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMaps": true
        },
        {
            "name": "Run Tests",
            "type": "extensionHost",
            "request": "launch",
            "testConfiguration": "${workspaceFolder}/.vscode-test.mjs",
            "args": ["--disable-extensions", "--extensionDevelopmentPath=${workspaceFolder}"],
            "outFiles": ["${workspaceFolder}/out-test/**/*.js"],
            "sourceMaps": true,
            "preLaunchTask": "npm: debug-test",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Run Tests in WSL",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out-test/test/index"
            ],
            "outFiles": ["${workspaceFolder}/out-test/**/*.js"],
            "sourceMaps": true
        }
    ]
}
